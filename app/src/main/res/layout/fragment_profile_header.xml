<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivBackgroundProfileImage"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_blue_light" />

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="72dp"
        android:background="@android:color/white"
        android:padding="2dp"
        android:src="@android:drawable/screen_background_light_transparent" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ivProfileImage"
        android:layout_below="@id/ivProfileImage"
        android:layout_marginTop="16dp"
        android:text="UserName"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvScreenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ivProfileImage"
        android:layout_below="@id/tvUserName"
        android:layout_marginTop="8dp"
        android:text="ScreenName"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvTagLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/ivProfileImage"
        android:layout_below="@id/tvScreenName"
        android:layout_marginTop="8dp"
        android:text="tagLine"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvNumFollowing"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_margin="16dp"
        android:layout_marginRight="4dp"
        android:layout_below="@id/tvTagLine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvNumFollower"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="48dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_toRightOf="@id/tvNumFollowing"
        android:layout_alignTop="@id/tvNumFollowing"
        />


</RelativeLayout>